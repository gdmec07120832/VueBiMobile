.rate-change-style {
  display inline-block
  position relative
  font-size 12px
  // padding-left 14px
  padding-left 0px
}

.rate-up {
  @extend .rate-change-style
  color #ff4d4f

  &:before {
    position absolute
    display block
    right: -12px;
    // left 0
    // top -5px
    top -1px
    content ""
    width 0
    height 0
    border 4px solid #ff4d4f
    border-bottom-width 8px
    border-left-color transparent
    border-right-color transparent
    border-top-color transparent
  }



}

.rate-down {
  @extend .rate-change-style
  color green

  &:before {
    position absolute
    display block
    right: -12px;
    // left 0
    top 2px
    content ""
    width 0
    height 0
    // border 6px solid green
    // border-top-width 10px
    border 4px solid green
    border-top-width 8px
    border-left-color transparent
    border-right-color transparent
    border-bottom-color transparent
  }


}



